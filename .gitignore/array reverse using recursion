#include<stdio.h>
int main() 
{
   int a[30], a, b, Size, Temp;
 
   printf("\n Please Enter the size of an array: ");
   scanf("%d",&Size);
  for (a = 0; a< Size; a++) 
   {
      scanf("%d", &a[a]);
   }
    b = a - 1;   
   a = 0;       
  while (a < b) 
   {
      Temp = a[a];
      a[a] = a[b];
      a[b] = Temp;
      a++;             
      b--;         
   }
   printf("\n Result of an Reverse array is: ");
   for (a= 0; a < Size; a++) 
   {
      printf("%d \t", a[a]);
   }
 
   return 0;
}

